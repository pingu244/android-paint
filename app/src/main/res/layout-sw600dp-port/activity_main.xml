<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainViewModel"
            type="woowacourse.paint.MainViewModel" />

        <variable
            name="palette"
            type="woowacourse.paint.model.ColorPalette" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <woowacourse.paint.BoardView
            android:id="@+id/board"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:eraseAll="@{mainViewModel.isErasing}"
            app:layout_constraintBottom_toTopOf="@id/layout_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:setBrush="@{mainViewModel.brushType}"
            app:setColorPalette="@{mainViewModel.color}"
            app:setWidth="@{mainViewModel.width}" />

        <ImageButton
            android:id="@+id/btn_erase"
            android:layout_width="@dimen/item_default"
            android:layout_height="@dimen/item_default"
            android:layout_margin="@dimen/erase_all_icon_margin"
            android:background="@drawable/refresh_24"
            android:onClick="@{()->mainViewModel.erase()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layout_menu"
            android:layout_width="0dp"
            android:layout_height="@dimen/menu_height"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/menu_padding_default"
            app:layout_constraintBottom_toTopOf="@id/btn_color_selection"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/btn_color_selection"
            android:layout_width="@dimen/item_default"
            android:layout_height="@dimen/item_default"
            android:layout_marginStart="@dimen/menu_padding_default"
            android:background="@drawable/palette"
            android:onClick="@{()->mainViewModel.openColorSelection()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/btn_pen_width"
            android:layout_width="@dimen/item_default"
            android:layout_height="@dimen/item_default"
            android:background="@drawable/width"
            android:onClick="@{()->mainViewModel.openWidthSelection()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_color_selection" />

        <ImageButton
            android:id="@+id/btn_brush_type"
            android:layout_width="@dimen/item_default"
            android:layout_height="@dimen/item_default"
            android:background="@drawable/brush"
            android:onClick="@{()->mainViewModel.openBrushSelection()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_pen_width" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
