<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainViewModel"
            type="woowacourse.paint.MainViewModel" />

        <variable
            name="palette"
            type="woowacourse.paint.ColorPalette" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <woowacourse.paint.BoardView
            android:id="@+id/board"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:eraseAll="@{mainViewModel.isErasing}"
            app:layout_constraintBottom_toTopOf="@id/range_slider_width"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:setColorPalette="@{mainViewModel.color}"
            app:setWidth="@{mainViewModel.width}" />

        <com.google.android.material.slider.Slider
            android:id="@+id/range_slider_width"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/board"
            app:setupSlider="@{mainViewModel::changeWidth}" />

        <LinearLayout
            android:id="@+id/layout_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/btn_color_selection"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_color_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="색상"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!--        <androidx.appcompat.widget.AppCompatButton-->
        <!--            android:id="@+id/btn_erase"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:onClick="@{()->mainViewModel.erase()}"-->
        <!--            android:text="@string/btn_erase"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toBottomOf="@id/color_red" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
