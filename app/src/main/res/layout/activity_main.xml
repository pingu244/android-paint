<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainViewModel"
            type="woowacourse.paint.MainViewModel" />

        <variable
            name="palette"
            type="woowacourse.paint.ColorPalette" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <woowacourse.paint.BoardView
            android:id="@+id/board"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/seekbar_width"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:setColorPalette="@{mainViewModel.color}"
            app:setWidth="@{mainViewModel.width}" />

        <SeekBar
            android:id="@+id/seekbar_width"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/board"
            app:setupSeekbar="@{mainViewModel}" />

        <View
            android:id="@+id/color_red"
            android:layout_width="@dimen/palette_default"
            android:layout_height="@dimen/palette_default"
            android:layout_marginTop="8dp"
            android:background="@color/red"
            android:onClick="@{()->mainViewModel.changeColor(palette.RED)}"
            app:layout_constraintEnd_toStartOf="@id/color_orange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seekbar_width" />

        <View
            android:id="@+id/color_orange"
            android:layout_width="@dimen/palette_default"
            android:layout_height="@dimen/palette_default"
            android:background="@color/orange"
            android:onClick="@{()->mainViewModel.changeColor(palette.ORANGE)}"
            app:layout_constraintBottom_toBottomOf="@id/color_red"
            app:layout_constraintEnd_toStartOf="@id/color_yellow"
            app:layout_constraintStart_toEndOf="@id/color_red"
            app:layout_constraintTop_toTopOf="@id/color_red" />

        <View
            android:id="@+id/color_yellow"
            android:layout_width="@dimen/palette_default"
            android:layout_height="@dimen/palette_default"
            android:background="@color/yellow"
            android:onClick="@{()->mainViewModel.changeColor(palette.YELLOW)}"
            app:layout_constraintBottom_toBottomOf="@id/color_red"
            app:layout_constraintEnd_toStartOf="@id/color_green"
            app:layout_constraintStart_toEndOf="@id/color_orange"
            app:layout_constraintTop_toTopOf="@id/color_red" />

        <View
            android:id="@+id/color_green"
            android:layout_width="@dimen/palette_default"
            android:layout_height="@dimen/palette_default"
            android:background="@color/green"
            android:onClick="@{()->mainViewModel.changeColor(palette.GREEN)}"
            app:layout_constraintBottom_toBottomOf="@id/color_red"
            app:layout_constraintEnd_toStartOf="@id/color_blue"
            app:layout_constraintStart_toEndOf="@id/color_yellow"
            app:layout_constraintTop_toTopOf="@id/color_red" />

        <View
            android:id="@+id/color_blue"
            android:layout_width="@dimen/palette_default"
            android:layout_height="@dimen/palette_default"
            android:background="#3F51B5"
            android:onClick="@{()->mainViewModel.changeColor(palette.BLUE)}"
            app:layout_constraintBottom_toBottomOf="@id/color_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/color_green"
            app:layout_constraintTop_toTopOf="@id/color_red" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_erase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_erase"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/color_red" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
